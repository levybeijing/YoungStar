<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._active.ZhaopinFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whole_hx"
        android:layout_marginBottom="15dp"></View>
    <com.chuanqing.youngstar.view.XListView
        android:id="@+id/xlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:scrollbars="none"></com.chuanqing.youngstar.view.XListView>
    <TextView
        android:id="@+id/zhaopin_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无招聘信息"
        android:visibility="gone"
        android:textSize="18sp"
        android:gravity="center"/>
</FrameLayout>