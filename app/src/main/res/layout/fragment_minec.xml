<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7"
    tools:context="._mine.MineFragment"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_minec"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:background="@mipmap/bg_company"
                >
                <!--<com.chuanqing.youngstar.tools.CircleImageView-->
                    <!--android:id="@+id/iv_photo_minec"-->
                    <!--android:layout_width="90dp"-->
                    <!--android:layout_height="90dp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginTop="70dp"-->
                    <!--/>-->
                <RelativeLayout
                    android:id="@+id/rl_tem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    >
                    <com.chuanqing.youngstar.tools.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_iv_mine"
                        android:layout_centerInParent="true"
                        />
                    <com.chuanqing.youngstar.tools.CircleImageView
                        android:id="@+id/iv_photo_minec"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_id_minec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_tem"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="ID:00000"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="255dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="17dp"
                        android:background="@mipmap/wallet_mine"
                        />

                    <TextView
                        android:id="@+id/tv_wallet_minec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="00"
                        android:textColor="#fff"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="316dp"
                    >
                    <TextView
                        android:id="@+id/tv_care_minec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="#fff"
                        android:textSize="12dp"
                        />
                </LinearLayout>
            </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    >
                    <ImageView
                        android:id="@+id/iv_msg_minec"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/msg_mine"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_tocall_minec"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/phone_mine"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_manage_minec"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/manage_company"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_minec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />
                <RadioGroup
                    android:id="@+id/rg_minec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_minec"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    >
                    <RadioButton
                        android:id="@+id/rb1_minec"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:background="@drawable/selector_publish_rb"
                        android:checked="true"
                        />
                    <RadioButton
                        android:id="@+id/rb2_minec"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:background="@drawable/selector_job_rb"
                        android:layout_marginLeft="20dp"
                        />
                </RadioGroup>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_minec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rg_minec" />
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>
