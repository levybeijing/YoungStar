<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/iv_student_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/student_choose"
        />
    <ImageView
        android:id="@+id/iv_invest_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/invest_choose"
        />
    <ImageView
        android:id="@+id/iv_company_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/company_choose"
        />
    <ImageView
        android:id="@+id/iv_visitor_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/visitor_choose"
        />
</LinearLayout>