<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <com.chuanqing.youngstar.tools.CircleImageView
            android:id="@+id/iv_photo_fragcares"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="13dp"
            android:src="@mipmap/myheadimg"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_id_fragcares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:textSize="15sp"
                android:text="sid123456"/>
            <TextView
                android:id="@+id/tv_type_fragcares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_gray"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:text="sid123456"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="10dp"
                   android:layout_height="13dp"
                   android:src="@mipmap/staractivity1"/>
               <TextView
                   android:id="@+id/tv_hot_fragcares"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1231"
                   android:textSize="12sp"
                   android:textColor="@color/home_gray"/>
           </LinearLayout>    
        </LinearLayout>
        <TextView
            android:id="@+id/btn_care_fragcares"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:textColor="#ccc"
            android:textSize="12sp"
            android:text="已关注"
            android:gravity="center"
            android:background="@mipmap/bg_gray_round"/>
    </LinearLayout>
</LinearLayout>