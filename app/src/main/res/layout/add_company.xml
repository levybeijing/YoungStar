<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="345dp"
    android:layout_height="182dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="47dp"
        >
        <ImageView
            android:id="@+id/iv_public_company"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/public_company"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="公告"
            android:layout_marginTop="10dp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="44dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/iv_service_company"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/service_company"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="专属客服"
            android:layout_marginTop="10dp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:layout_marginRight="47dp"
        >
        <ImageView
            android:id="@+id/iv_recruit_company"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/recruit_company"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="招聘"
            android:layout_marginTop="10dp"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>