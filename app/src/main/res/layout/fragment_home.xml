<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="._home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/common_top"></include>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.youth.banner.Banner
                    android:id="@+id/home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:indicator_width="10dp"
                    app:indicator_height="10dp"
                    app:indicator_drawable_selected="@mipmap/lunbo1"
                    app:indicator_drawable_unselected="@mipmap/lunbo2"></com.youth.banner.Banner>

                <LinearLayout
                    android:id="@+id/ll_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RelativeLayout
                            android:id="@+id/ll_layout_title"
                            android:layout_width="193dp"
                            android:layout_height="41dp"
                            android:orientation="horizontal"
                            android:clipChildren="false"
                            android:background="@mipmap/home_button">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/leitai_baoming"
                                android:scaleType="fitXY"
                                android:layout_centerInParent="true"/>
                            <android.support.v4.view.ViewPager
                                android:id="@+id/home_viewpager_title"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:clipChildren="false">
                            </android.support.v4.view.ViewPager>
                        </RelativeLayout>

                    </LinearLayout>
                    <android.support.v4.view.ViewPager
                        android:id="@+id/home_viewpager"
                        android:layout_width="300dp"
                        android:layout_height="210dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:clipChildren="false">

                    </android.support.v4.view.ViewPager>
                </LinearLayout>

                    <!--活动精选-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="168dp"
                            android:layout_height="37dp"
                            android:src="@mipmap/home_activity_jingxuan"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="31dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/home_activity_more"/>
                    </LinearLayout>
                    <!--<ListView-->
                        <!--android:id="@+id/home_activity_1_list"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"></ListView>-->
                <LinearLayout
                    android:id="@+id/home_activity_1_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <!--活动精选-->
                <LinearLayout
                    android:id="@+id/home_yanyi"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="168dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/home_yanyi"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="31dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/home_activity_more"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_activity_2_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>