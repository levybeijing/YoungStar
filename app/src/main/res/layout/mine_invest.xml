<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_mine"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:background="@mipmap/bg_invest"
        >
        <ImageView
            android:id="@+id/iv_photo_invest"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            />

    <TextView
        android:id="@+id/tv_id_invest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_photo_invest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="ID:123456"
        android:textColor="#fff"
        android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="255dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:background="@mipmap/wallet_mine"
                />
            <TextView
                android:id="@+id/tv_money_invest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="316dp"
                >
                <TextView
                    android:id="@+id/tv_care_invest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="725"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    />
            </LinearLayout>
    </RelativeLayout>