<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/all_bg"
    tools:context="._home.searchstudent.StudentShowActivity">
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_top_search1"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/student_search_relativelayout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="星秀"
                android:layout_alignParentTop="true"
                android:textSize="15sp"/>
            <View
                android:id="@+id/student_search_view1"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/mainColor"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/student_search_relativelayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="星活动"
                android:layout_alignParentTop="true"
                android:textSize="15sp"/>
            <View
                android:id="@+id/student_search_view2"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/mainColor"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/student_search_relativelayout3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="星职场"
                android:layout_alignParentTop="true"
                android:textSize="15sp"/>
            <View
                android:id="@+id/student_search_view3"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/mainColor"></View>
        </RelativeLayout>
    </LinearLayout>
    <com.chuanqing.youngstar.view.XListView
        android:id="@+id/student_xlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.chuanqing.youngstar.view.XListView>
    <LinearLayout
        android:id="@+id/search_student_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
    <LinearLayout
        android:id="@+id/search_yanyi_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>