<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@mipmap/bg_statusbar"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司资料填写"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:textSize="18dp"
            />
        <ImageView
            android:id="@+id/iv_back_comauthen2"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dp"
            android:background="@mipmap/back_top"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="64dp"
    >
    <LinearLayout
        android:id="@+id/ll_imgauthen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/iv1_comauthen2"
                android:layout_width="270dp"
                android:layout_height="135dp"
                android:background="@mipmap/img_uploads"
                />
            <TextView
                android:id="@+id/tv1_comauthen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击上传营业执照(副本)"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textColor="#CCCCCC"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/iv2_comauthen2"
                android:layout_width="270dp"
                android:layout_height="135dp"
                android:background="@mipmap/img_uploads"
                />
            <TextView
                android:id="@+id/tv2_comauthen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击上传公司法人身份证人像面"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textColor="#CCCCCC"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/iv3_comauthen2"
                android:layout_width="270dp"
                android:layout_height="135dp"
                android:background="@mipmap/img_uploads"
                />
            <TextView
                android:id="@+id/tv3_comauthen2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击上传公司法人身份证国徽面"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textColor="#CCCCCC"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/iv4_comauthen2"
                android:layout_width="270dp"
                android:layout_height="135dp"
                android:background="@mipmap/img_uploads"
                />
            <TextView
                android:id="@+id/tv4_comauthen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补充材料"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textColor="#CCCCCC"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ok_comauthen2"
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:background="@mipmap/bg_red"
            android:text="完成"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</ScrollView>
</RelativeLayout>