<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/home_activity_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/home_activity_1_img"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@mipmap/my166"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/home_activity_1_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="活动名字"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <com.chuanqing.youngstar.tools.CircleImageView
                android:id="@+id/yanyi_headimg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="4dp"/>
            <TextView
                android:id="@+id/home_activity_1_time"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="@color/home_gray"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:text="活动截止：2019.12.12"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3dp"
                android:src="@mipmap/home_people"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/home_activity_1_people"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center_vertical"
                android:text="1000"
                android:textColor="@color/home_gray"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>