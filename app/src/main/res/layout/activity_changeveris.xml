<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center_horizontal"
            >
            <!--1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/user_login"
                    />
                <EditText
                    android:id="@+id/et_name_changeveris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请填写您的真实姓名"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                />

            <!--2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:background="@mipmap/phone_register"
                    />
                <EditText
                    android:id="@+id/et_phone_changeveris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请填写您的联系方式"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                />

            <!--3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/school_choose"
                    />
                <EditText
                    android:id="@+id/et_school_changeveris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请填写您所就读的学校"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                />

            <!--4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/major_choose"
                    />
                <EditText
                    android:id="@+id/et_major_changeveris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请填写您所学习的专业"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                />

            <!--5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="13dp"
                    android:background="@mipmap/cert_choose"
                    />
                <EditText
                    android:id="@+id/et_snum_changeveris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请填写您的学号"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                />

            <!--5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="13dp"
                    android:background="@mipmap/cert_choose"
                    />
                <EditText
                    android:id="@+id/et_inum_changeveris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请填写您的身份证号"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                />
            <!--7-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/user_login"
                    />
                <LinearLayout
                    android:id="@+id/ll_lables_changeveris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    />
                <TextView
                    android:id="@+id/tv_lablesnum_changeveris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0/2)"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                />
            <!--111-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                >
                <ImageView
                    android:id="@+id/iv1_changeveris"
                    android:layout_width="330dp"
                    android:layout_height="178dp"
                    android:background="@drawable/bg_iv_changeveris"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击修改身份证人像面"
                    android:gravity="center"
                    android:textColor="#999"
                    />
            </LinearLayout>

            <!--222-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                >
                <ImageView
                    android:id="@+id/iv2_changeveris"
                    android:layout_width="330dp"
                    android:layout_height="178dp"
                    android:background="@drawable/bg_iv_changeveris"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击修改身份证国徽面"
                    android:gravity="center"
                    android:textColor="#999"
                    />
            </LinearLayout>

            <!--333-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                >
                <ImageView
                    android:id="@+id/iv3_changeveris"
                    android:layout_width="330dp"
                    android:layout_height="178dp"
                    android:background="@drawable/bg_iv_changeveris"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击修改学生证"
                    android:gravity="center"
                    android:textColor="#999"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ok_changeveris"
                android:layout_width="140dp"
                android:layout_height="44dp"
                android:text="完成"
                android:gravity="center"
                android:textColor="#FFF"
                android:background="@mipmap/bg_red"
                android:layout_marginTop="25dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>