<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context="._mine.MineFragment"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_mines"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="375dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"

            >
            <RelativeLayout
                android:id="@+id/rl_mines"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:background="@mipmap/bg_student"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                >
                <RelativeLayout
                    android:id="@+id/rl_tem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    >
                    <com.chuanqing.youngstar.tools.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_iv_mine"
                        android:layout_centerInParent="true"
                        />
                    <com.chuanqing.youngstar.tools.CircleImageView
                        android:id="@+id/iv_photo_mines"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_id_mines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rl_tem"
                    android:textColor="#fff"
                    android:text="ID:000000"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    />
                <RelativeLayout
                    android:layout_width="128dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="215dp"
                    >
                    <TextView
                        android:id="@+id/tv_lable_mines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="演员|模特"
                        android:textColor="#fff"
                        android:layout_marginRight="10dp"
                        android:layout_centerInParent="true"
                        />
                    <ImageView
                        android:id="@+id/iv_sex_mines"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@mipmap/sex_man"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="255dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="17dp"
                        android:background="@mipmap/wallet_mine"
                        />
                    <TextView
                        android:id="@+id/tv_wallet_mines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="#fff"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    >
                    <!--1-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tv1_mines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参加"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            />
                    </LinearLayout>
                    <!--2-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tv2_mines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0000"
                            android:textColor="#FFC21C"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="星火"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            />
                    </LinearLayout>
                    <!--3-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tv3_mines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_mines"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="20dp"
                app:layout_collapseMode="pin"
                android:background="@color/mainColor"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_msg_mines"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/msg_mine"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_call_mines"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/phone_mine"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_share_mines"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/share_mine"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>


            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_collapseMode="pin"
            >
            <RadioGroup
                android:id="@+id/rg_mines"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center"
                >
                <RadioButton
                    android:id="@+id/rb1_mines"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:background="@drawable/selector_status_rb"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/rb2_mines"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:background="@drawable/selector_works_rb"
                    android:layout_marginLeft="20dp"
                    />
            </RadioGroup>
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_mines"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F56250"
                android:visibility="invisible"
                />
        </FrameLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />
</android.support.design.widget.CoordinatorLayout>
