<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_item_fragworks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离岛X别样风情"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_time_item_fragworks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
            <!--重叠位置-->
        <ImageView
            android:id="@+id/iv_cover_item_fragworks"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_delete_item_fragworks"
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:background="@mipmap/delete_fragstatus"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/iv_share_item_fragworks"
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:background="@mipmap/share_fragstatus"/>

            <RadioButton
                android:id="@+id/rb_praise_item_fragworks"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_praise_fragstatus"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:button="@null"
                android:checked="true"
                />
            <TextView
                android:id="@+id/tv_praise_item_fragworks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12321"
                android:textColor="#999999"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>