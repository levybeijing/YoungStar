<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#FFF"
    android:gravity="center_vertical"
    >

    <ImageView
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:background="@mipmap/notify_msg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_title_rv_officemsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                />
            <ImageView
                android:id="@+id/iv_dot_officemsg"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/bg_dot_msg"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sub_rv_officemsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"
            android:layout_marginTop="7dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_time_rv_officemsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:layout_marginRight="15dp"
        />
</LinearLayout>