<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@mipmap/bg_statusbar"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料填写"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:textSize="18dp"
            />
        <ImageView
            android:id="@+id/iv_back_investauthen2"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dp"
            android:background="@mipmap/back_top"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        >
        <!--1-->
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/iv1_investauthen2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_uploads"
                />
            <TextView
                android:id="@+id/tv1_investauthen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击上传身份证人像面"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textColor="#CCCCCC"
                />
        </RelativeLayout>
        <!--2-->
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/iv2_investauthen2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_uploads"
                />
            <TextView
                android:id="@+id/tv2_investauthen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击上传身份证国徽面"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textColor="#CCCCCC"
                />
        </RelativeLayout>
        <!--3-->
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="135dp"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/iv3_investauthen2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_uploads"
                />
            <TextView
                android:id="@+id/tv3_investauthen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传营业执照或手持身份证照片"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textColor="#CCCCCC"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ok_investauthen2"
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:background="@mipmap/bg_red"
            android:text="完成"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</RelativeLayout>