<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#FFF"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_rv_match"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"

            >
            <TextView
                android:id="@+id/tv_title_rv_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv_title_rv_match"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/tv_rank_rv_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv_rank_rv_match"
                android:layout_marginTop="10dp"
                android:textColor="#666666"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_dashed"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/tv_status_rv_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv_status_rv_match"
                android:textColor="#FB5252"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <RadioButton
                    android:id="@+id/rb_time_rv_match"

                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:focusable="false"
                    android:button="@null"
                    android:background="@drawable/selector_time_match"
                    android:checked="true"
                    />
                <TextView
                    android:id="@+id/tv_time_rv_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04.20â€”05.31"
                    android:textColor="#FB5252"
                    android:layout_marginLeft="3dp"
                    />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="#FB5252"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <RadioButton
                    android:id="@+id/rb_num_rv_match"
                    android:layout_width="14dp"
                    android:layout_height="12dp"
                    android:focusable="false"
                    android:button="@null"
                    android:background="@drawable/selector_num_match"
                    android:checked="true"
                    />
                <TextView
                    android:id="@+id/tv_number_rv_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5846"
                    android:textColor="#FB5252"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>