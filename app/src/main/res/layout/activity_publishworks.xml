<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    >
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_top_fabu"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:background="#ccc"
                >
                <ImageView
                    android:id="@+id/iv_cover_works"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/tv_addcover_works"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:text="添加封面"
                    android:gravity="center"
                    android:background="#aa000000"
                    android:textColor="#ffffff"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:orientation="vertical"
                android:padding="15dp"
                >
                <EditText
                    android:id="@+id/et_name_works"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_white5"
                    android:hint="请输入作品集名称"
                    android:padding="10dp"
                    />
                <EditText
                    android:id="@+id/et_intro_works"
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:background="@drawable/bg_white5"
                    android:hint="请输入作品说明"
                    android:gravity="left"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/rv_works"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
            <LinearLayout
                android:id="@+id/publishworks_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical"></LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="47dp"
                    >
                    <ImageView
                        android:id="@+id/iv_gallery_works"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@mipmap/videoimg_student"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="相册"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    >
                    <ImageView
                        android:id="@+id/iv_camera_works"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@mipmap/camera_works"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="拍摄"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="47dp"
                    >
                    <ImageView
                        android:id="@+id/iv_record_works"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@mipmap/record_student"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="录音"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>