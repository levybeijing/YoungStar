<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <com.chuanqing.youngstar.tools.CircleImageView
            android:id="@+id/search_student_headimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="13dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/search_student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:textSize="15sp"
                android:text="sid123456"/>
            <TextView
                android:id="@+id/search_student_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_gray"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:text="sid123456"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="10dp"
                   android:layout_height="13dp"
                   android:src="@mipmap/staractivity1"/>
               <TextView
                   android:id="@+id/search_student_redu"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1231"
                   android:textSize="12sp"
                   android:textColor="@color/home_gray"/>
           </LinearLayout>    
        </LinearLayout>

        <Button
            android:id="@+id/search_guanzhu"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/mainColor"
            android:textSize="12sp"
            android:text="查看作品"
            android:background="@mipmap/search_yaoqing"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:src="@mipmap/activity_redu"/>
            <TextView
                android:id="@+id/partake_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_gray"
                android:layout_marginTop="2dp"
                android:text="1"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>