<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    >
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/item_commen_subacount"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:id="@+id/tv_pass_subaccount"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/bg1_tv_subaccount"
            android:text="通过"
            android:gravity="center"
            android:textColor="#F55067"
            />
        <TextView
            android:id="@+id/tv_refuse_subaccount"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/bg2_tv_subaccount"
            android:text="拒绝"
            android:gravity="center"
            android:textColor="#999999"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>