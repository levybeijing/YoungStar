<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--公司头像选择-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >
        <RadioGroup
            android:id="@+id/rg1_comauthen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb1_comauthen1"
                android:background="@mipmap/company1"
                style="@style/photo_company" />
            <RadioButton
                android:id="@+id/rb2_comauthen1"
                android:background="@mipmap/company2"
                style="@style/photo_company" />
            <RadioButton
                android:id="@+id/rb3_comauthen1"
                android:background="@mipmap/company3"
                style="@style/photo_company" />
            <RadioButton
                android:id="@+id/rb4_comauthen1"
                android:background="@mipmap/company4"
                style="@style/photo_company" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg2_comauthen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb5_comauthen1"
                android:background="@mipmap/company5"
                style="@style/photo_company" />
            <RadioButton
                android:id="@+id/rb6_comauthen1"
                android:background="@mipmap/company6"
                style="@style/photo_company" />
            <RadioButton
                android:id="@+id/rb7_comauthen1"
                android:background="@mipmap/company7"
                style="@style/photo_company" />
            <RadioButton
                android:id="@+id/rb8_comauthen1"
                android:background="@mipmap/company8"
                style="@style/photo_company" />
        </RadioGroup>
    </LinearLayout>
