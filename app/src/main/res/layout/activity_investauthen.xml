<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <!--公司头像选择-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@mipmap/bg_statusbar"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料填写"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:textSize="18dp"
            />
        <ImageView
            android:id="@+id/iv_back_investauthen1"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dp"
            android:background="@mipmap/back_top"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <!--公司头像选择-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:id="@+id/iv_1_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/company1"
                    />
                <ImageView
                    android:id="@+id/iv1_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/checked_company"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:id="@+id/iv_2_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/company2"
                    />
                <ImageView
                    android:id="@+id/iv2_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/checked_company"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:id="@+id/iv_3_investauthen1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/company3"
                    />
                <ImageView
                    android:id="@+id/iv3_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/checked_company"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:id="@+id/iv_4_investauthen1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/company4"
                    />
                <ImageView
                    android:id="@+id/iv4_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/checked_company"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:id="@+id/iv_5_investauthen1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/company5"
                    />
                <ImageView
                    android:id="@+id/iv5_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/checked_company"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:id="@+id/iv_6_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/company6"
                    />
                <ImageView
                    android:id="@+id/iv6_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/checked_company"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:id="@+id/iv_7_investauthen1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/company7"
                    />
                <ImageView
                    android:id="@+id/iv7_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/checked_company"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:id="@+id/iv_8_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/company8"
                    />
                <ImageView
                    android:id="@+id/iv8_investauthen1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/checked_company"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击选择头像"
        android:textColor="#666"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_margin="10dp"
        />

    <!---->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/user_login"
                />
            <EditText
                android:id="@+id/et_username_investauthen1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写您的姓名"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/phone_register"
                />
            <EditText
                android:id="@+id/et_phone_investauthen1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写您的联系方式"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/email_choose"
                />
            <EditText
                android:id="@+id/et_email_investauthen1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写您的邮箱"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="24dp"
                android:background="@mipmap/intro"
                />
            <EditText
                android:id="@+id/et_intro_investauthen1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint=" 请填写您的投资经历"
                android:textSize="14dp"
                android:background="@drawable/bg_gray"
                android:gravity="left"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_next_investauthen1"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_red_22"
        android:text="下一步"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />
</LinearLayout>
</ScrollView>