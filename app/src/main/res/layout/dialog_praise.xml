<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000"
    >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#fff"
        >
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:background="@mipmap/bg_statusbar"
            >
            <ImageView
                android:layout_width="63dp"
                android:layout_height="72dp"
                android:src="@mipmap/dialog_praise"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的本日免费点赞次数已用完"
            android:textColor="#F56250"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续点赞将消耗您的星芽币"
            android:textColor="#F56250"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#999999"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_cancel_dialogpraise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="取消"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                />
            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#999999"
                />
            <TextView
                android:id="@+id/tv_ok_dialogpraise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#F56250"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>