<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_mine"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:background="@mipmap/bg_student"
        >
        <ImageView
            android:id="@+id/iv_photo_student"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            />
        <TextView
            android:id="@+id/tv_id_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_photo_student"
            android:textColor="#fff"
            android:text="ID:123456"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            />
        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="215dp"
            >
            <ImageView
                android:id="@+id/zhong"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/tv_lable1_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="演员"
                android:textColor="#fff"
                android:layout_toLeftOf="@+id/zhong"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/tv_lable2_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模特"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/zhong"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/iv_sex_student"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/sex_man"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="255dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:background="@mipmap/wallet_mine"
                />
            <TextView
                android:id="@+id/tv_money_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <!--1-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv1_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参加"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <!--2-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv2_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="725"
                    android:textColor="#FFC21C"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星火"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <!--3-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv3_studentv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>