<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/bg_ll_login"
        android:padding="30dp"
        android:layout_marginTop="100dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/user_login"
                />
            <EditText
                android:id="@+id/et_phone_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/code_register"
                />
            <EditText
                android:id="@+id/et_code_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:textSize="14dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_getcode_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:background="@mipmap/bg_code"
                android:gravity="center"
                android:textColor="#FFF55067"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/pwd_login"
                />
            <EditText
                android:id="@+id/et_pwd_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/pwd_login"
                />
            <EditText
                android:id="@+id/et_pwdagain_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请确认密码"
                android:textSize="14dp"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ok_forget"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:background="@mipmap/bg_red"
        android:layout_centerHorizontal="true"
        android:text="完成"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="372dp"
        />
</RelativeLayout>