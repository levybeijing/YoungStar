<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@mipmap/bg_statusbar"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定邮箱"
        android:textColor="#FFF"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:textSize="18dp"
        />
    <ImageView
        android:id="@+id/iv_back_editemail"
        android:layout_width="12dp"
        android:layout_height="21dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="13dp"
        android:background="@mipmap/back_top"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:background="#FFF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textColor="#999999"
                />
            <TextView
                android:id="@+id/tv_oldemail_editemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="12dp"
                android:layout_marginLeft="31dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新邮箱"
                />
            <EditText
                android:id="@+id/et_new_editemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入新邮箱"
                android:textSize="12dp"
                android:layout_marginLeft="16dp"
                />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_ok_editemail"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:background="@drawable/bg2_tv_changephone"
        android:text="完成"
        android:gravity="center"
        android:textColor="#FFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        />

</LinearLayout>