<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="194dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
            <!--重叠位置-->
        <ImageView
            android:id="@+id/iv_cover_item_fragjob"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/tv_title_item_fragjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="作品集标题"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_status_item_fragjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#F65250"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:id="@+id/iv_delete_item_fragjob"
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:background="@mipmap/delete_fragstatus"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/iv_share_item_fragjob"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@mipmap/num_fragjob"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/tv_num_item_fragjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231"
                android:textColor="#999999"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>