<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_login"
        android:scaleType="center"
        />
    <ImageView
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/logo_login"
        android:layout_marginTop="62dp"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="231dp"
        android:layout_centerHorizontal="true"
        >
        <RadioButton
            android:id="@+id/rb_login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_login"
            android:button="@null"
            android:layout_marginRight="1dp"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/rb_register"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_register"
            android:button="@null"
            android:layout_marginLeft="1dp"
            />
    </RadioGroup>
    <!--**************-->
    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="155dp"
        android:layout_marginTop="296dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/bg_ll_login"
        android:gravity="center_horizontal"
        android:padding="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/user_login"
                />
            <EditText
                android:id="@+id/et_phone_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:background="@mipmap/pwd_login"
                />
            <EditText
                android:id="@+id/et_pwd_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forget_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/forget_login"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="忘记密码"
                android:textSize="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_tologin_login"
        android:layout_width="121dp"
        android:layout_height="40dp"
        android:background="@mipmap/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="483dp"
        />
    <ImageView
        android:layout_width="298dp"
        android:layout_height="13dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/login_else"
        android:layout_marginTop="566dp"
        />
    <RelativeLayout
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="607dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/qq_login"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/login_qq"
            />
        <ImageView
            android:id="@+id/wx_login"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/login_wx"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/wb_login"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/login_wb"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>