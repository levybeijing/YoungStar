<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    >

    <TextView
        android:id="@+id/tv_note_bind"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="为了您的账号安全，建议您绑定手机"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_below="@+id/tv_note_bind"
        android:background="#fff"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >
        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="2"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:background="@mipmap/user_login"
                />
            <EditText
                android:id="@+id/et_phone_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"
                android:layout_weight="1"
                android:textSize="14dp"
                />
        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="2"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:background="@mipmap/code_register"
                />
            <EditText
                android:id="@+id/et_code_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"
                android:layout_weight="1"
                android:textSize="14dp"
                />
            <TextView
                android:id="@+id/tv_getcode_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:background="@mipmap/bg_code"
                android:gravity="center"
                android:textColor="#FFF55067"
                />
        </LinearLayout>
        <!--3-->
        <LinearLayout
            android:id="@+id/ll_forget_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            >
            <CheckBox
                android:id="@+id/checked_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/checked_register"
                android:button="@null"
                android:layout_marginRight="13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="已阅读并同意"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/tv_protocol_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="用户协议"
                android:textSize="12dp"
                android:textColor="#FFF55067"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="和"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/tv_privacy_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="隐私保护"
                android:textSize="12dp"
                android:textColor="#FFF55067"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tologin_bind"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:text="登录"
        android:textColor="#fff"
        android:background="@mipmap/bg_red"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="322dp"
        />
</RelativeLayout>