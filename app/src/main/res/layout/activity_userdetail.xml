<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:layout_weight="1"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_userdetail"
        android:layout_width="match_parent"
        android:layout_height="362dp"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
            <ImageView
                android:id="@+id/iv_bg_photo_usedetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:id="@+id/rl_userdetail"
                android:layout_width="match_parent"
                android:layout_height="302dp"
                android:background="#4000"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                >
                <RelativeLayout
                    android:id="@+id/rl_tem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    >
                    <com.chuanqing.youngstar.tools.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/bg_iv_mine"
                        android:layout_centerInParent="true"
                        />
                    <com.chuanqing.youngstar.tools.CircleImageView
                        android:id="@+id/iv_photo_userdetail"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_id_userdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_tem"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="ID:00000"
                    android:textColor="#fff"
                    android:textSize="20dp" />
                <RelativeLayout
                    android:layout_width="128dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_id_userdetail"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:id="@+id/tv_lable_userdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="演员|模特"
                        android:textColor="#fff"
                        android:layout_marginRight="10dp"
                        android:layout_centerInParent="true"
                        />
                    <ImageView
                        android:id="@+id/iv_sex_userdetail"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@mipmap/sex_man"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_userdetail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="20dp"
                app:layout_collapseMode="pin"
                android:background="@color/mainColor"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_msg_userdetail"
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/back_top"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_manage_userdetail"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/share_mine"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>

            </android.support.v7.widget.Toolbar>


            <!--</RelativeLayout>-->
        </android.support.design.widget.CollapsingToolbarLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_collapseMode="pin"
            >
            <!--<android.support.design.widget.TabLayout-->
                <!--android:id="@+id/tab_userdetail"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="60dp"-->
                <!--/>-->
            <RadioGroup
                android:id="@+id/rg_userdetail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rl_minec"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb1_userdetail"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_userdetail_rb"
                    android:button="@null"
                    android:checked="true"
                    android:text="动态"
                    android:textColor="@drawable/selector_txtcolor_userdetail"
                    android:gravity="center"
                    />

                <RadioButton
                    android:id="@+id/rb2_userdetail"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/selector_userdetail_rb"
                    android:button="@null"
                    android:text="作品集"
                    android:textColor="@drawable/selector_txtcolor_userdetail"
                    android:checked="false"
                    android:gravity="center"
                    />
                <RadioButton
                    android:id="@+id/rb3_userdetail"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/selector_userdetail_rb"
                    android:button="@null"
                    android:text="星活动"
                    android:textColor="@drawable/selector_txtcolor_userdetail"
                    android:checked="false"
                    android:gravity="center"
                    />
            </RadioGroup>
        </FrameLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_userdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_care_userdetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            >
            <RadioButton
                android:id="@+id/rb_care_userdetail"
                android:layout_width="19dp"
                android:layout_height="15dp"
                android:button="@null"
                android:background="@drawable/selector_ivcare_userdetail"
                android:checked="true"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:focusable="false"
                />
            <TextView
                android:id="@+id/tv_care_userdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="#F56250"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_hot_userdetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:src="@mipmap/hot_followc"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/tv_hot_userdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="#F56250"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>