<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@mipmap/bg_statusbar"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定账户"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:textSize="18dp"
            />
        <ImageView
            android:id="@+id/iv_back_comchose"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dp"
            android:background="@mipmap/back_top"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_new_comchose"
        android:layout_width="250dp"
        android:layout_height="137dp"
        android:layout_marginTop="114dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/new_company"
        />

    <ImageView
        android:id="@+id/iv_bind_comchose"
        android:layout_width="250dp"
        android:layout_height="137dp"
        android:layout_marginTop="291dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/bind_company"
        />
</RelativeLayout>